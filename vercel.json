{
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/node",
        "config": { "zeroConfig": true }
      },
      {
        "src": "vite.config.js",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"
        }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/$1" },
      { "src": "/(.*)", "dest": "/index.html" }
    ],
    "env": {
      "NODE_ENV": "production"
    }
  }
  